---
import { formatDate } from '../lib/utils';

interface Props {
  title: string;
  description: string;
  date: Date;
  tags: string[];
  cover?: string;
  slug: string;
  readingTime: number;
}

const { title, description, date, tags, cover, slug, readingTime } = Astro.props;
---

<article class="group flex flex-col h-full">
  <a href={`/blog/${slug}`} class="block flex-1 flex flex-col">
    <div class="aspect-[16/9] rounded-xl overflow-hidden mb-5 bg-neutral-100 relative">
      {cover ? (
        <img
          src={cover}
          alt={title}
          class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
          loading="lazy"
          onerror="this.style.display='none';this.nextElementSibling.style.display='flex'"
        />
        <div class="absolute inset-0 bg-gradient-to-br from-primary-100 to-primary-200/80 items-center justify-center hidden">
          <img src="/brand/logo-mark.svg" alt="" class="w-10 h-10 opacity-30" />
        </div>
      ) : (
        <div class="w-full h-full bg-gradient-to-br from-primary-100 to-primary-200/80 flex items-center justify-center">
          <img src="/brand/logo-mark.svg" alt="" class="w-10 h-10 opacity-30" />
        </div>
      )}
    </div>

    <div class="flex flex-col flex-1 space-y-2.5">
      <div class="flex items-center gap-3 text-xs text-neutral-400">
        <time datetime={date.toISOString()}>{formatDate(date)}</time>
        <span class="w-1 h-1 rounded-full bg-neutral-300"></span>
        <span>{readingTime} min read</span>
      </div>

      <h3 class="text-lg font-semibold text-neutral-900 group-hover:text-primary-700 transition-colors leading-snug">
        {title}
      </h3>

      <p class="text-sm text-neutral-500 leading-relaxed line-clamp-2 flex-1">
        {description}
      </p>

      {tags.length > 0 && (
        <div class="flex flex-wrap gap-1.5 pt-1">
          {tags.slice(0, 3).map((tag) => (
            <span class="text-xs px-2 py-0.5 rounded-full bg-neutral-100 text-neutral-500 font-medium">
              {tag}
            </span>
          ))}
        </div>
      )}
    </div>
  </a>
</article>
