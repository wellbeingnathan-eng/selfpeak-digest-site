---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/blog', label: 'Blog' },
];

function isActive(href: string, current: string): boolean {
  if (href === '/') return current === '/';
  return current.startsWith(href);
}
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-neutral-100">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
    <a href="/" class="flex items-center gap-2.5 group">
      <img
        src="/brand/logo-mark.svg"
        alt="Logo"
        class="h-8 w-8 transition-transform group-hover:scale-105"
      />
      <span class="text-lg text-neutral-900 tracking-tight">
        <span class="font-bold">SelfPeak</span><span class="font-normal">&nbsp;Digest</span>
      </span>
    </a>

    <div class="hidden sm:flex items-center gap-8">
      <ul class="flex items-center gap-8">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class:list={[
                'text-sm font-medium transition-colors',
                isActive(link.href, currentPath)
                  ? 'text-primary-700'
                  : 'text-neutral-500 hover:text-neutral-900',
              ]}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
      <a
        href="/subscribe"
        class="text-sm font-medium px-4 py-2 rounded-lg bg-primary-700 text-white hover:bg-primary-800 transition-colors"
      >
        Subscribe
      </a>
    </div>

    <button
      id="mobile-menu-btn"
      class="sm:hidden p-2 -mr-2 text-neutral-600 hover:text-neutral-900 transition-colors"
      aria-label="Open menu"
      aria-expanded="false"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>

  <div id="mobile-menu" class="sm:hidden hidden border-t border-neutral-100 bg-white">
    <ul class="px-4 py-3 space-y-1">
      {navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class:list={[
              'block py-2 px-3 rounded-lg text-sm font-medium transition-colors',
              isActive(link.href, currentPath)
                ? 'text-primary-700 bg-primary-50'
                : 'text-neutral-600 hover:text-neutral-900 hover:bg-neutral-50',
            ]}
          >
            {link.label}
          </a>
        </li>
      ))}
      <li>
        <a
          href="/subscribe"
          class="block py-2 px-3 rounded-lg text-sm font-medium text-primary-700 hover:bg-primary-50 transition-colors"
        >
          Subscribe
        </a>
      </li>
    </ul>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  if (btn && menu) {
    btn.addEventListener('click', () => {
      const isOpen = !menu.classList.contains('hidden');
      menu.classList.toggle('hidden');
      btn.setAttribute('aria-expanded', String(!isOpen));
    });
  }
</script>
